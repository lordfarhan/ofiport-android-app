<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/default_space">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingBottom="@dimen/default_space">

      <ImageView
        android:id="@+id/imageView_dialogIncompleteProfile"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/default_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_supervised_user_circle_24" />

      <TextView
        android:id="@+id/textView_dialogIncompleteProfileTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/default_space"
        android:paddingTop="@dimen/medium_space"
        android:paddingEnd="@dimen/default_space"
        android:text="@string/dialog_incomplete_profile_title"
        android:textAlignment="center"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_dialogIncompleteProfile" />

      <TextView
        android:id="@+id/textView_dialogIncompleteProfileSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/default_space"
        android:paddingEnd="@dimen/default_space"
        android:text="@string/dialog_incomplete_profile_subtitle"
        android:textAlignment="center"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_dialogIncompleteProfileTitle" />

      <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton_actionOpenProfile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_default_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_space"
        android:text="@string/action_open_profile"
        android:textAllCaps="false"
        android:textSize="@dimen/default_text_size"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="@dimen/button_default_corner_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_dialogIncompleteProfileSubtitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>

</layout>